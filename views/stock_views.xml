<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add QC smart button to stock picking form -->
    <record id="view_picking_form_inherit_qc" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.qc</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add buttons to header -->
            <xpath expr="//header" position="inside">
                <button name="action_create_qc_inspection"
                        string="Create QC Inspection"
                        type="object"
                        class="btn-primary"/>
                <button name="action_view_qc_inspections"
                        string="QC Inspections"
                        type="object"
                        class="btn-secondary"/>
                <field name="qc_inspection_count" widget="statinfo" string="QC Inspections"/>
            </xpath>
        </field>
    </record>
</odoo>