<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_qc_inspection_pivot" model="ir.ui.view">
        <field name="name">qc.inspection.pivot</field>
        <field name="model">qc.inspection</field>
        <field name="arch" type="xml">
            <pivot string="QC Analysis" sample="1">
                <field name="product_id" type="row"/>
                <field name="state" type="col"/>
                <field name="quantity_to_inspect" type="measure"/>
                <field name="quantity_accepted" type="measure"/>
                <field name="quantity_rejected" type="measure"/>
                <field name="pass_rate" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_qc_inspection_graph" model="ir.ui.view">
        <field name="name">qc.inspection.graph</field>
        <field name="model">qc.inspection</field>
        <field name="arch" type="xml">
            <graph string="QC Trends" sample="1" type="line">
                <field name="inspection_date" interval="week"/>
                <field name="pass_rate" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_qc_inspection_pivot_supplier" model="ir.ui.view">
        <field name="name">qc.inspection.pivot.supplier</field>
        <field name="model">qc.inspection</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <pivot string="Supplier Quality Analysis" sample="1">
                <field name="partner_id" type="row"/>
                <field name="product_id" type="row"/>
                <field name="state" type="col"/>
                <field name="pass_rate" type="measure"/>
                <field name="quantity_rejected" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_qc_inspection_graph_donut" model="ir.ui.view">
        <field name="name">qc.inspection.graph.donut</field>
        <field name="model">qc.inspection</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <graph string="QC Status Distribution" type="pie" sample="1">
                <field name="state"/>
            </graph>
        </field>
    </record>

    <record id="action_qc_analysis" model="ir.actions.act_window">
        <field name="name">Quality Analysis</field>
        <field name="res_model">qc.inspection</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No quality data to analyze yet
            </p>
            <p>
                Complete some quality inspections to see analytics here.
            </p>
        </field>
    </record>

    <record id="action_qc_supplier_analysis" model="ir.actions.act_window">
        <field name="name">Supplier Quality Report</field>
        <field name="res_model">qc.inspection</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id" ref="view_qc_inspection_pivot_supplier"/>
        <field name="context">{}</field>
    </record>
</odoo>
