<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Simple Dashboard Action -->
    <record id="action_qc_dashboard" model="ir.actions.act_window">
        <field name="name">QC Dashboard</field>
        <field name="res_model">qc.inspection</field>
        <field name="view_mode">pivot,graph,list,form</field>
        <field name="view_id" ref="view_qc_inspection_list"/>
        <field name="search_view_id" ref="view_qc_inspection_search"/>
        <field name="context">{
            'search_default_group_by_state': 1,
            'search_default_group_by_product': 1
        }</field>
    </record>
</odoo>