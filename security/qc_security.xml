<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_qc" model="ir.module.category">
            <field name="name">Quality Control</field>
            <field name="description">Manage quality inspections and control</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_qc_inspector" model="res.groups">
            <field name="name">Inspector</field>
            <field name="category_id" ref="module_category_qc"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_qc_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_qc"/>
            <field name="implied_ids" eval="[(4, ref('group_qc_inspector'))]"/>
        </record>

        <record model="ir.rule" id="qc_inspection_inspector_rule">
            <field name="name">QC Inspector: see own inspections</field>
            <field name="model_id" ref="model_qc_inspection"/>
            <field name="domain_force">[('inspector_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_qc_inspector'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record model="ir.rule" id="qc_inspection_manager_rule">
            <field name="name">QC Manager: see all inspections</field>
            <field name="model_id" ref="model_qc_inspection"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_qc_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
